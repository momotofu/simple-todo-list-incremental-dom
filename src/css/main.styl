@import './reset.styl'
@import './color.styl'

#app
  background-color Silver
  height 100vh

.app
  &-container
    display flex
    font-family helvetica
    justify-content center
    margin auto
    transition all .2s ease

.TodoList
  &-container
    background-color Silver
    box-sizing border-box
    color Charcoal
    display flex
    justify-content center
    padding 104px 18px 60px
    position relative
    width 100%

  &-content
    border-radius 2px
    box-shadow 0 1px 4px rgba(41,51,57,.5)
    max-width 600px
    width 100%

  &-header
    align-items center
    background-color white
    border-top-left-radius 2px
    border-top-right-radius 2px
    box-shadow 0 1px 4px rgba(41,51,57,.5)
    display flex
    height 84px
    justify-content center
    left 0
    position absolute
    top 0
    width 100%
    z-index 10
    &-title
      color Charcoal
      font-family 18px

  &-items
    list-style-type none
    padding 0
    &-item
      background-color white
      overflow hidden
      padding 19px 0
      position relative
      white-space nowrap
      &:first-child&-no-top-input
        border-top-left-radius 2px
        border-top-right-radius 2px
      &-checkbox
        -webkit-appearance none
        border 2px solid
        border-color inherit
        border-radius 2px
        box-sizing border-box
        color inherit
        cursor pointer
        font-size 12px
        height 24px
        margin -1px 25px 0 18px
        margin-top -1px
        outline none
        position relative
        text-align center
        user-select none
        vertical-align middle
        width 24px
        &:before
          color Amber
          content ''
          display inline-block
          font-size 16px
          margin 1px 0 0 1px
        &:active, &:checked
          background-color White
          color Amber
          &:before
            content 'âœ–'
        &:hover
          border-color Amber
      &:last-child
        &:after
          content none
      &:after
        background-color Silver
        bottom 0
        content ''
        display block
        height 1px
        position absolute
        right 0
        width calc(100% - 72px)
      &-open
        background-color white
      &-done
        background-color Charcoal
        color white
        &:after
          background-color DarkCharcoal
      &:before
        background-color inherit
        content ''
        height 100%
        position absolute
        right 0
        top 0
        width 18px

  &-input
    &-container
      background-color white
      border-top-left-radius 2px
      border-top-right-radius 2px
      display flex
      height 61px
      position relative
    &-field
      align-items center
      border none
      border-bottom 2px solid Charcoal
      border-top-left-radius 2px
      border-top-right-radius 2px
      display flex
      font-family helvetica
      font-size 16px
      letter-spacing .05em
      margin-left 72px
      outline none
      position relative
      width 100%
      &:focus, &:hover
        border-bottom-color Cyan
      &:active
        border-bottom-color CyanActive
      &-bottom
        border-top 1px solid Silver
    &-button
      -webkit-appearance none
      -webkit-touch-callout none
      background-color Cyan
      border none
      border-radius 1000px
      bottom -26px
      box-shadow 0 5px 5px rgba(0, 0, 0, 0.4)
      box-sizing border-box
      color inherit
      cursor pointer
      height auto
      justify-content center
      outline none
      padding 27px
      position absolute
      right 18px
      transition all .2s ease
      user-select none
      vertical-align middle
      z-index 10
      &:hover
        background-color CyanHover
        text-decoration none
        transition none
      &:active
        background-color CyanActive
        box-shadow none
      &:before, &:after
        background-color white
        border-radius 1px
        content ''
        display block
        left 50%
        position absolute
        top 50%
        transform translate(-50%,-50%)
      &:after
        width 14px
        height 2px
      &:before
        height 14px
        width 2px

  &-filters
    &-container
      padding 18px
      padding-left 15px
    &-filter
      -webkit-appearance none
      border 2px solid
      border-color inherit
      border-radius 100px
      box-sizing border-box
      cursor pointer
      height 24px
      outline none
      position relative
      user-select none
      vertical-align middle
      width 24px
      &-label
        font-size 14px
        font-weight bold
        line-height 30px
        margin 0 18px 0 1px
        vertical-align bottom
      &:focus
        &:after
          border 2px solid
          border-color inherit
          border-radius 100px
          bottom -6px
          content ''
          left -6px
          opacity .5
          position absolute
          right -6px
          top -6px
      &:active, &:checked, &:hover
        background Charcoal
        border-color Charcoal
        &:before
          background white
          border-radius 100px
          bottom 2px
          box-shadow 0 4px 5px rgba(0, 0, 0, 0.2)
          content ''
          display block
          left 2px
          position absolute
          right 2px
          top 2px
      &:active
        &:before
          box-shadow none